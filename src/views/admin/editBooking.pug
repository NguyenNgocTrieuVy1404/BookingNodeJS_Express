    - 
        function formatDateInput(dateString) {
            const date = new Date(dateString);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

    // Container cho thông báo
    #notificationContainer.position-fixed.top-0.end-0.p-3(style="z-index: 1060; max-width: 380px;")
        // Thông báo sẽ được thêm vào đây bằng JavaScript

    .container-fluid.p-4
        // Các alert cũ (để duy trì tương thích)
        if cookies.adminMessage
            .alert.alert-success.alert-dismissible.fade.show(role='alert')
                = cookies.adminMessage
                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

        if cookies.adminError
            .alert.alert-danger.alert-dismissible.fade.show(role='alert')
                = cookies.adminError
                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

        .card.shadow-sm
            .card-header.bg-white.py-3
                h5.card-title.mb-0
                    i.fas.fa-calendar-alt.me-2.text-primary
                    | Chỉnh sửa đặt phòng

            .card-body
                form#editBookingForm.admin-form(action=`/admin/bookings/edit/${booking.idDatPhong}` method="POST")
                    .row
                        .col-md-6.mb-3
                            label.form-label(for="idKhachHang") Khách hàng
                            select.form-select#idKhachHang(name="idKhachHang")
                                each customer in customers
                                    option(value=customer.idKhachHang selected=customer.idKhachHang === booking.idKhachHang)= customer.hoTen

                        .col-md-6.mb-3
                            label.form-label(for="idPhong") Phòng
                            select.form-select#idPhong(name="idPhong")
                                each room in rooms
                                    option(value=room.idPhong selected=room.idPhong === booking.idPhong)= `Phòng ${room.idPhong} - ${room.tenKhachSan}`

                        .col-md-6.mb-3
                            label.form-label(for="ngayBatDau") Ngày bắt đầu
                            input.form-control#ngayBatDau(type="date" name="ngayBatDau" value=formatDateInput(booking.ngayBatDau))

                        .col-md-6.mb-3
                            label.form-label(for="ngayKetThuc") Ngày kết thúc
                            input.form-control#ngayKetThuc(type="date" name="ngayKetThuc" value=formatDateInput(booking.ngayKetThuc))

                        .col-md-6.mb-3
                            label.form-label(for="donGia") Đơn giá (VND/đêm)
                            input.form-control#donGia(type="number" name="donGia" value=booking.donGia)

                        .col-md-6.mb-3
                            label.form-label(for="trangThai") Trạng thái
                            select.form-select#trangThai(name="trangThai")
                                option(value="1" selected=booking.trangThai === 1) Đang hoạt động
                                option(value="2" selected=booking.trangThai === 2) Đã hoàn thành
                                option(value="0" selected=booking.trangThai === 0) Đã hủy
                    
                    .mt-3
                        button.btn.btn-primary(type="submit")
                            i.fas.fa-save.me-1
                            | Lưu thay đổi
                        a.btn.btn-secondary.ms-2(href="/admin/bookings")
                            i.fas.fa-times.me-1
                            | Hủy

